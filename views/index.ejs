<div class="author">
    <h1 class="author_heading"> Artist </h1>
    <p class="author_body"> An artist.</p>
</div>

<img src="" alt="beautiful artwork">

<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>
    <ul class="article_ul">
        <% posts.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article_date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Posts from before</a>
    <% } %>

</section>